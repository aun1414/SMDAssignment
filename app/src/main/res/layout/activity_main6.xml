<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:weightSum="6"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/RelativeLayout01"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_weight="1"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/mytextview1"
            android:layout_width="57dp"
            android:layout_height="47dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/threeLines5" />

        <ImageButton
            android:id="@+id/mytextview2"
            android:layout_width="61dp"
            android:layout_height="43dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp"
            android:layout_marginRight="1dp"
            android:src="@drawable/profile5" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Playlists"
            android:textColor="#FFFFFF"
            android:textSize="35dp">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/playlist5">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/img1"
                    android:layout_marginBottom="40dp"
                    android:layout_centerHorizontal="true"
                    android:text="Playlist 1"
                    android:textSize="20dp"
                    android:textColor="#FF9800">

                </TextView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/playlist5">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/img2"
                    android:layout_marginBottom="40dp"
                    android:layout_centerHorizontal="true"
                    android:text="Playlist 2"
                    android:textSize="20dp"
                    android:textColor="#FF9800">

                </TextView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/playlist5">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/img3"
                    android:layout_marginBottom="40dp"
                    android:layout_centerHorizontal="true"
                    android:text="Playlist 3"
                    android:textSize="20dp"
                    android:textColor="#FF9800">

                </TextView>

            </RelativeLayout>
        </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Artists"
                android:textColor="#FFFFFF"
                android:textSize="35dp">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/artist5">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/img4"
                        android:layout_marginBottom="40dp"
                        android:layout_centerHorizontal="true"
                        android:text="Artist 1"
                        android:textSize="20dp"
                        android:textColor="#FF9800">

                    </TextView>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/artist5">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/img5"
                        android:layout_marginBottom="40dp"
                        android:layout_centerHorizontal="true"
                        android:text="Artist 2"
                        android:textSize="20dp"
                        android:textColor="#FF9800">

                    </TextView>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/artist5">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/img6"
                        android:layout_marginBottom="40dp"
                        android:layout_centerHorizontal="true"
                        android:text="Artist 3"
                        android:textSize="20dp"
                        android:textColor="#FF9800">

                    </TextView>

                </RelativeLayout>
            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Song Name"
            android:textSize="20dp"
            android:textColor="#FF9800">

        </TextView>

        <ImageButton
            android:layout_width="52dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-11dp"
            android:layout_marginRight="148dp"
            android:src="@drawable/fastBackward5"></ImageButton>

        <ImageButton
            android:layout_width="49dp"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-11dp"
            android:layout_marginRight="90dp"
            android:src="@drawable/playOne5"></ImageButton>

        <ImageButton
            android:layout_width="74dp"
            android:layout_height="47dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-9dp"
            android:layout_marginRight="4dp"
            android:src="@drawable/fastForward5"></ImageButton>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#817B7B"
        android:layout_weight="1">

            <ImageButton
                android:id="@+id/heart"
                android:layout_width="51dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/heart5">

            </ImageButton>



        <ImageButton
            android:layout_width="51dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/plus5">

        </ImageButton>

        <ImageButton
            android:layout_width="51dp"
            android:layout_height="60dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/search5">

        </ImageButton>

        <ImageButton
            android:layout_width="51dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:src="@drawable/clock5">

        </ImageButton>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="-18dp"
            android:text="Liked"
            android:textColor="#FF9800" />


    </RelativeLayout>
</LinearLayout>