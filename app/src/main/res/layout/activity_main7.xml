<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:weightSum="4"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/back1"
            android:layout_width="87dp"
            android:layout_height="96dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/back18">

        </ImageButton>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/back1"
            android:text="Song Title"
            android:textColor="#FFFFFF"
            android:textSize="40dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="By Artists"
        android:textSize="40dp"
        android:textColor="#FF9800">

    </TextView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/profile1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/profile5">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What an amazing song"
            android:textSize="25dp"
            android:textColor="#101010"
            android:background="@drawable/formbackground"
            android:layout_toRightOf="@+id/profile1"
            android:layout_marginTop="30dp">

        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@+id/profile2"
            android:background="@drawable/formbackground"
            android:hint="Post a comment"
            android:textColor="#101010"
            android:textSize="25dp">

        </EditText>

        <ImageView
            android:id="@+id/profile2"
            android:layout_width="118dp"
            android:layout_height="125dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="29dp"
            android:src="@drawable/sendMsg7">

        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#817B7B"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/heart"
            android:layout_width="51dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/heart5">

        </ImageButton>



        <ImageButton
            android:layout_width="51dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/plus5">

        </ImageButton>

        <ImageButton
            android:layout_width="51dp"
            android:layout_height="60dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/search5">

        </ImageButton>

        <ImageButton
            android:layout_width="51dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:src="@drawable/clock5">

        </ImageButton>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="-18dp"
            android:text="Liked"
            android:textColor="#FF9800" />


    </RelativeLayout>
</LinearLayout>