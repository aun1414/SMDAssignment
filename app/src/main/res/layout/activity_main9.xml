<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:weightSum="3"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/back1"
            android:layout_width="87dp"
            android:layout_height="96dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/back18">

        </ImageButton>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/back1"
            android:text="Add Playlist"
            android:textColor="#FFFFFF"
            android:textSize="40dp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:src="@drawable/cloud9">

    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="4">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/formbackground"
            android:hint="Name"
            android:textColorHint="#FF9800"
            android:ems="10" >
            <requestFocus />
        </EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/formbackground"
            android:hint="Description"
            android:textColorHint="#FF9800"
            android:ems="10" >
            <requestFocus />
        </EditText>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:textSize="25dp"
            android:textColor="#FF9800"
            android:layout_alignParentRight="true"
            android:text="Add Playlist"
            style="?android:attr/borderlessButtonStyle">

        </Button>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_dark_background"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/heart"
            android:layout_width="51dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/heart5">

        </ImageButton>



        <ImageButton
            android:layout_width="51dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/plus5">

        </ImageButton>

        <ImageButton
            android:layout_width="51dp"
            android:layout_height="60dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/search5">

        </ImageButton>

        <ImageButton
            android:layout_width="51dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:src="@drawable/clock5">

        </ImageButton>


    </RelativeLayout>

</LinearLayout>
